<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="DecisionSpinButton">
    <item name="android:text">@string/spin</item>
    <item name="android:textColor">@android:color/white</item>
  </style>
  <style name="UserSingleLineText">
    <item name="android:inputType">text|textCapWords</item>
    <item name="android:singleLine">true</item>
  </style>
  <style name="UserEmailAddress">
    <item name="android:inputType">textEmailAddress</item>
    <item name="android:singleLine">true</item>
  </style>
  <style name="UserBio">
    <item name="android:gravity">top</item>
    <item name="android:inputType">text|textMultiLine|textCapSentences</item>
    <item name="android:minLines">3</item>
    <item name="android:maxLines">3</item>
  </style>

  <style name="Appboy.Feedback.Layout">
    <item name="android:background">@color/light_gray</item>
  </style>
  <style name="Appboy.Feedback.NavigationBar">
    <item name="android:background">@color/gray</item>
  </style>

  <style name="Appboy.Feed.List">
    <item name="android:background">@color/light_gray</item>
    <item name="android:cacheColorHint">@color/light_gray</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">16.0dp</item>
    <item name="android:paddingLeft">12.5dp</item>
    <item name="android:paddingRight">5.0dp</item>
    <item name="android:scrollbarStyle">outsideInset</item>
  </style>
</resources>