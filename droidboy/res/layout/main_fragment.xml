<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/com_appboy_sample_set_user_id_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:hint="Enter UserId here"/>
        <Button
            android:id="@+id/com_appboy_sample_set_user_id_button"
            style="@style/DroidboyButton"
            android:text="Set UserId"/>
        <EditText
            android:id="@+id/com_appboy_sample_custom_event_or_purchase_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:hint="Custom event or purchase name"/>
        <Button
            android:id="@+id/com_appboy_sample_log_custom_event_button"
            style="@style/DroidboyButton"
            android:text="Log Custom Event"/>
        <Button
            android:id="@+id/com_appboy_sample_log_purchase_button"
            style="@style/DroidboyButton"
            android:text="Log Purchase"/>
        <Button
            android:id="@+id/com_appboy_sample_set_user_attributes_button"
            style="@style/DroidboyButton"
            android:text="Set User Attributes"/>
        <Button
            android:id="@+id/com_appboy_sample_unset_custom_attributes_button"
            style="@style/DroidboyButton"
            android:text="Unset Custom User Attributes"/>
        <Button
            android:id="@+id/com_appboy_sample_submit_feedback_button"
            style="@style/DroidboyButton"
            android:text="Submit Feedback"/>
        <Button
            android:id="@+id/com_appboy_sample_request_flush_button"
            style="@style/DroidboyButton"
            android:text="Request Flush"/>
    </LinearLayout>
</ScrollView>
