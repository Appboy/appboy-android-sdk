<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="BaseWidget">
    <item name="android:fontFamily">@font/sailec_font_family</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="BaseWidget.PopulateButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">0dp</item>
    <item name="android:textSize">10sp</item>
    <item name="android:maxLines">3</item>
  </style>

  <style name="BaseWidget.DroidboyButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">0dp</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="BaseWidget.UserSingleLineText">
    <item name="android:inputType">text|textCapWords</item>
    <item name="android:singleLine">true</item>
  </style>
  <style name="BaseWidget.UserEmailAddress">
    <item name="android:inputType">textEmailAddress</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="BaseWidget.InAppMessageTesterButton">
    <item name="android:layout_width">0.0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="BaseWidget.InAppMessageTesterCheckBox">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="BaseWidget.InAppMessageTesterTextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingRight">20dp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="BaseWidget.PushBottomButton">
    <item name="android:padding">4dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:background">@color/window_background</item>
  </style>

  <style name="BaseWidget.SpinnerItem">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">marquee</item>
  </style>

  <style name="Appboy.Feed.List">
    <item name="android:background">@color/window_background</item>
    <item name="android:cacheColorHint">@color/window_background</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">16.0dp</item>
    <item name="android:paddingLeft">12.5dp</item>
    <item name="android:paddingRight">5.0dp</item>
    <item name="android:scrollbarStyle">outsideInset</item>
  </style>

  <style name="Theme.Droidboy" parent="Base.Theme.Droidboy">
  </style>

  <style name="Base.Theme.Droidboy" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#1c222b</item>
    <item name="colorPrimaryDark">#1c222b</item>
    <item name="colorAccent">#3accdd</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="titleTextColor">@android:color/white</item>
  </style>
</resources>
