<?xml version="1.0" encoding="utf-8"?>
<com.appboy.ui.inappmessage.views.AppboyInAppMessageFullView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0.0dp">
    <RelativeLayout
        android:id="@+id/com_appboy_inappmessage_full_frame"
        style="@style/Appboy.InAppMessage.Frame.Full"/>
    <RelativeLayout
        android:id="@+id/com_appboy_inappmessage_full"
        style="@style/Appboy.InAppMessage.Full">
        <LinearLayout
            android:id="@+id/com_appboy_inappmessage_full_all_content_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0.0dp">
            <com.appboy.ui.inappmessage.views.InAppMessageImageView
                android:id="@+id/com_appboy_inappmessage_full_imageview"
                style="@style/Appboy.InAppMessage.Image.Full"/>
            <LinearLayout
              android:id="@+id/com_appboy_inappmessage_full_text_and_button_content_parent"
              android:padding="0.0dp"
              style="@style/Appboy.InAppMessage.Full.TextAndButtonContent">
                <ScrollView
                    android:id="@+id/com_appboy_inappmessage_full_scrollview"
                    style="@style/Appboy.InAppMessage.ScrollView.Full">
                    <LinearLayout
                        android:id="@+id/com_appboy_inappmessage_full_text_layout"
                        style="@style/Appboy.InAppMessage.Full.TextArea"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/com_appboy_inappmessage_full_header_text"
                            style="@style/Appboy.InAppMessage.Header.Full"
                            tools:text="In App Message Header Text"/>
                        <TextView
                            android:id="@+id/com_appboy_inappmessage_full_message"
                            style="@style/Appboy.InAppMessage.Message.Full"
                            tools:text="In App Message Message Text"/>
                    </LinearLayout>
                </ScrollView>
                <!-- This layout is solely for a single button being present-->
                <LinearLayout
                    android:id="@+id/com_appboy_inappmessage_full_button_layout_single"
                    style="@style/Appboy.InAppMessage.Layout.Button.Full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone">
                    <com.appboy.ui.inappmessage.views.InAppMessageButton
                        android:id="@+id/com_appboy_inappmessage_full_button_single_one"
                        style="@style/Appboy.InAppMessage.Button.Full.Single"/>
                </LinearLayout>
                <!-- This layout is solely for two buttons being present -->
                <LinearLayout
                    android:id="@+id/com_appboy_inappmessage_full_button_layout_dual"
                    style="@style/Appboy.InAppMessage.Layout.Button.Full"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <com.appboy.ui.inappmessage.views.InAppMessageButton
                            android:id="@+id/com_appboy_inappmessage_full_button_dual_one"
                            style="@style/Appboy.InAppMessage.Button.Full.Dual.One"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <com.appboy.ui.inappmessage.views.InAppMessageButton
                            android:id="@+id/com_appboy_inappmessage_full_button_dual_two"
                            style="@style/Appboy.InAppMessage.Button.Full.Dual.Two"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/com_appboy_inappmessage_full_close_button"
                style="@style/Appboy.InAppMessage.CloseButton.Full"/>
        </RelativeLayout>
    </RelativeLayout>
</com.appboy.ui.inappmessage.views.AppboyInAppMessageFullView>
