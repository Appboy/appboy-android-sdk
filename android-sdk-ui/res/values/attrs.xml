<?xml version="1.0" encoding="utf-8"?>
<resources>
  <attr name="appboyInAppMessageCustomFontFile" format="string"/>
  <declare-styleable name="com.appboy.ui.inappmessage.AppboyInAppMessageTextView">
    <attr name="appboyInAppMessageCustomFontFile"/>
  </declare-styleable>
  <declare-styleable name="com.appboy.ui.inappmessage.AppboyInAppMessageButtonView">
    <attr name="appboyInAppMessageCustomFontFile"/>
  </declare-styleable>

  <declare-styleable name="com.appboy.ui.widget.CardView">
    <attr name="appboyCardViewRoundedCorners"  format="dimension"/>
    <!-- Generic Font for all the texts in the card -->
    <attr name="appboyCardViewCustomFont" format="string"/>
    <!-- Font for the title text in the card. If specified, appboyCardViewCustomFont will be ignored for title-->
    <attr name="appboyCardViewCustomFontTitle" format="string"/>
    <!-- Font for the messages text in the card. If specified, appboyCardViewCustomFont will be ignored for title -->
    <attr name="appboyCardViewCustomFontMessage" format="string"/>
    <attr name="appboyCardViewIconReadDrawable" format="reference"/>
    <attr name="appboyCardViewIconUnreadDrawable" format="reference"/>
  </declare-styleable>
</resources>