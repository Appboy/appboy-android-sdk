<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/com_appboy_feed_read_indicator_holder"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/com_appboy_short_news_card_image">
        <ViewStub
            android:id="@+id/com_appboy_short_news_card_imageview_stub"
            android:layout="@layout/com_appboy_stubbed_feed_image_view"
            style="@style/Appboy.Cards.ShortNews.Image"/>

        <ViewStub
            android:id="@+id/com_appboy_short_news_card_drawee_stub"
            android:layout="@layout/com_appboy_stubbed_feed_drawee_view"
            style="@style/Appboy.Cards.ShortNews.Image"/>
    </LinearLayout>

    <View
        android:layout_width="0.0dp"
        android:layout_height="10.0dp"
        android:layout_below="@id/com_appboy_short_news_card_image"/>

    <TextView
        android:id="@+id/com_appboy_short_news_card_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/com_appboy_short_news_card_image"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10.0dp"
        android:layout_marginTop="8.0dp"
        style="@style/Appboy.Cards.ShortNews.Title"/>

    <TextView
        android:id="@+id/com_appboy_short_news_card_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/com_appboy_short_news_card_title"
        android:layout_alignLeft="@id/com_appboy_short_news_card_title"
        android:layout_marginRight="10.0dp"
        style="@style/Appboy.Cards.ShortNews.Description"/>

    <!-- Optional -->
    <TextView
        android:id="@+id/com_appboy_short_news_card_domain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/com_appboy_short_news_card_description"
        android:layout_alignLeft="@id/com_appboy_short_news_card_description"
        android:layout_marginRight="10.0dp"
        style="@style/Appboy.Cards.ShortNews.Domain"/>
</merge>