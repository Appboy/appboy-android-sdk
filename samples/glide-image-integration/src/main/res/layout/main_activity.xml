<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
      android:text="Display Modal"
      android:id="@+id/com_appboy_display_modal_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <Button
      android:text="Display Slideup"
      android:id="@+id/com_appboy_display_slideup_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <Button
      android:text="Flush Data"
      android:id="@+id/com_appboy_flush_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  </LinearLayout>
  <fragment android:name="com.braze.ui.BrazeFeedFragment"
            android:id="@+id/com_appboy_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>
